{
  "manifest_version": 2,
  "name": "Tomato Clock",
  "version": "3.0.2",
  "author": "Samuel Jun",
  "description": "A simple browser extension for managing your productivity.",

  "icons": {
    "16": "/img/tomato-icon-16.png",
    "32": "/img/tomato-icon-32.png",
    "48": "/img/tomato-icon-48.png",
    "64": "/img/tomato-icon-64.png",
    "128": "/img/tomato-icon-128.png",
    "256": "/img/tomato-icon-256.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "/img/tomato-icon-16.png",
      "32": "/img/tomato-icon-32.png",
      "48": "/img/tomato-icon-48.png",
      "64": "/img/tomato-icon-64.png",
      "128": "/img/tomato-icon-128.png",
      "256": "/img/tomato-icon-256.png"
    },
    "default_title": "Tomato Clock",
    "default_popup": "/panel/panel.html"
  },

  "background": {
    "scripts": [
      "/lib/browser-polyfill.js",
      "background.js"
    ]
  },

  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ]
}
