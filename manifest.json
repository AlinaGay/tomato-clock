{
  "manifest_version": 2,
  "name": "Pomodoro Clock",
  "version": "2.0.1",
  "author": "Samuel Jun",
  "description": "A simple extension for Pomodoro Technique users",

  "icons": {
    "16": "img/tomato-icon-16.png",
    "32": "img/tomato-icon-32.png",
    "48": "img/tomato-icon-48.png",
    "64": "img/tomato-icon-64.png",
    "128": "img/tomato-icon-128.png",
    "256": "img/tomato-icon-256.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "img/tomato-icon-16.png",
      "32": "img/tomato-icon-32.png",
      "48": "img/tomato-icon-48.png",
      "64": "img/tomato-icon-64.png",
      "128": "img/tomato-icon-128.png",
      "256": "img/tomato-icon-256.png"
    },
    "default_title": "Pomodoro Clock",
    "default_popup": "src/panel/panel.html"
  },

  "background": {
    "scripts": [
      "lib/browser-polyfill.js",
      "src/background.js"
    ]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ]
}
